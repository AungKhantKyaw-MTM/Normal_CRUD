<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>


<%= form_with url: bulk_email_users_path, method: :post do %>
  <%= submit_tag 'Send Bulk Email' %>
<% end %>

<%= link_to "New user", new_user_path %>
